[Unit]
Description=Apache NiFi
After=network.target

[Service]
Type=forking
User=root
Group=root
ExecStart=/opt/nifi/nifi-1.3.0/bin/nifi.sh start
ExecStop=/opt/nifi/nifi-1.3.0/bin/nifi.sh stop
ExecRestart=/opt/nifi/nifi-1.3.0/bin/nifi.sh restart
RestartSec=10
Restart=always


[Install]
WantedBy=multi-user.target
